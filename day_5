#include <iostream>
using namespace std;

int fact(int n){
    int fac=1;
    for(int i=1;i<=n;i++){
        fac=fac*i;
    }
    return fac;
}
int ncr(int n,int r){
    int num = fact(n);
    int den = fact(r)*fact(n-r);
    return num/den;
}
int main(){
    int n;
    cout << "Enter a number"<<endl;
    cin >> n;
    int r;
    cout << "Enter r value"<< endl;
    cin >> r;
    cout << "The nCr value is: " << ncr(n,r) << endl;
    return 0;
}


